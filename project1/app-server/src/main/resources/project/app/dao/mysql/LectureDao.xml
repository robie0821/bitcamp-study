<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.app.dao.LectureDao">
    <resultMap id="lectureMap" type="lecture">
        <id     column="lect_no"    property="lectNo"/>
        <result column="lect_name"  property="lectName"/>
        <result column="room"       property="room"/>
        
        <association property="subject" javaType="subject">
            <id     column="subj_no"    property="subjNo"/>
            <result column="subj_name"  property="subjName"/>
            <result column="subj_type"  property="subjType"/>
        </association>
    </resultMap>

    <insert id="insert" parameterType="lecture">
        insert into lecture(subj_no,lect_name,room)
        values(#{subject.subjNo},#{lectName},#{room})
    </insert>

    <select id="findAll" resultType="Map">
        select
            S.subj_no as subjNo
            ,S.subj_name as subjName
            ,S.subj_type as subjType
            ,count(*) as count
        from
            lecture L inner join subject S on L.subj_no=S.subj_no
        group by
            S.subj_no
        order by
            S.subj_no
    </select>
    
    <select id="findBySubject" parameterType="int" resultMap="lectureMap">
        select
            L.lect_no
            ,L.lect_name
            ,L.room
            ,S.subj_no
            ,S.subj_name
            ,S.subj_type
        from
            lecture L inner join subject S on L.subj_no=S.subj_no
        where
            L.subj_no=#{subjNo}
        order by
            L.lect_no
    </select>

    <select id="findByNo" parameterType="int" resultMap="lectureMap">
        select
            L.lect_no
            ,L.lect_name
            ,L.room
            ,S.subj_no
            ,S.subj_name
            ,S.subj_type
        from
            lecture L inner join subject S on L.subj_no=S.subj_no
        where
            L.lect_no=#{lectNo}
    </select>

    <update id="update" parameterType="lecture">
        update lecture set
            subj_no=#{subject.subjNo}
            ,lect_name=#{lectName}
            ,room=#{room}
        where
            lect_no=#{lectNo}
    </update>

    <delete id="delete" parameterType="int">
        delete from lecture
        where
            lect_no=#{lectNo}
    </delete>
</mapper>