<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.app.dao.ReviewDao">

  <!-- 결과 레코드의 컬럼 값을 자바 객체에 어떻게 담을 것인지 설정한다. -->
  <resultMap type="review" id="reviewMap">
    <result column="review_no"      property="no"/>
    <result column="subject_id"     property="subjectId"/>
    <result column="rate"           property="rate"/>
    <result column="content"        property="content"/>
    
    <association property="student" javaType="student">
      <id     column="student_id"   property="no"/>
      <result column="name"         property="name"/>
    </association>
    
  </resultMap>

  <insert id="insert" parameterType="review">
    insert into review(review_no,student_id,subject_id,rate,content)
    values(#{no},#{student.no},#{subjectId},#{rate},#{content})
  </insert>
  
  <select id="findAll" parameterType="int" resultMap="reviewMap">
    select
      t.student_no,
      t.name,
      r.subjectId,
      r.rate,
      r.content,
    from
      review r inner join student t on r.student_id=t.student_no
    where subjectId=#{no}
  </select>
  
  <select id="findBy" parameterType="int" resultMap="reviewMap">
    select
      t.student_no,
      t.name,
      r.subjectId,
      r.rate,
      r.content,
    from
      score r inner join student t on r.student_id=t.student_no
    where
      student_id=#{StudentNo}
      and subject_id=#{subjectNo}
  </select>
  
  <update id="update" parameterType="review">
	  update score set
	    rate=#{rate},
	    content=#{content},
	  where 
	    student_id=#{student.no}
  </update>
  
  <delete id="delete" parameterType="review">
    delete from myapp_board
    where 
      review_no=#{no}
  </delete>
</mapper>