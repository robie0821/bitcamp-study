<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.app.dao.SubjectDao">

    <resultMap type="subject" id="subjectMap">
        <result column="subj_no"    property="subjectNo"/>
        <result column="name"       property="name"/>
        <result column="type"       property="type"/>
    </resultMap>

    <insert id="insert" parameterType="subject">
        insert into subject(name,type)
        values(#{name},#{type})
    </insert>

    <select id="list" resultMap="subjectMap">
        select
            subj_no,
            name,
            type
        from
            subject
        order by
            subj_no
    </select>

    <select id="detail" parameterType="int" resultMap="subjectMap">
        select
            subj_no,
            name,
            type
        from
            subject
        where
            subj_no=#{subjectNo}
    </select>

    <update id="update" parameterType="subject">
        update subject set
            name=#{name},
            type=#{type}
        where
            subj_no=#{subjectNo}
    </update>

    <delete id="delete" parameterType="int">
        delete from subject
        where
            subj_no=#{subjectNo}
    </delete>
</mapper>
