<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.app.dao.LectureDao">
    <resultMap id="lectureMap" type="lecture">
        <id column="lect_no" property="lectNo"/>
        <result column="name" property="name"/>
        <result column="room" property="room"/>
        
        <association property="subject" javaType="subject">
            <id column="subj_no" property="subjectNo"/>
            <result column="name" property="name"/>
            <result column="type" property="type"/>
        </association>
    </resultMap>

    <insert id="insert" parameterType="lecture">
        insert into lecture(subj_no,name,room)
        values(#{subject.subjectNo},#{name},#{room})
    </insert>

    <select id="findAll" resultType="Map">
        select
            S.subj_no as no,
            S.name as name,
            S.type as type,
            count(*) as count
        from
            lecture L inner join subject S on L.subj_no=S.subj_no
        group by
            S.subj_no
        order by
            S.subj_no
    </select>
    
    <select id="findBySubject" parameterType="int" resultMap="lectureMap">
        select
            L.lect_no,
            L.name,
            L.room,
            S.subj_no,
            S.name,
            S.type
        from
            lecture L inner join subject S on L.subj_no=S.subj_no
        where
            L.subj_no=#{subjNo}
        order by
            L.lect_no
    </select>

    <select id="findByNo" parameterType="int" resultType="lecture">
        select
            L.lect_no,
            L.name,
            L.room,
            S.subj_no,
            S.name,
            S.type
        from
            lecture L inner join subject S on L.subj_no=S.subj_no
        where
            L.lect_no=#{lectNo}
    </select>

    <update id="update" parameterType="lecture">
        update lecture set
            subj_no=#{subject.subjNo},
            name=#{name},
            room=#{room}
        where
            lect_no=#{lectNo}
    </update>

    <delete id="delete" parameterType="int">
        delete from lecture
        where
            lect_no=#{lectNo}
    </delete>
</mapper>