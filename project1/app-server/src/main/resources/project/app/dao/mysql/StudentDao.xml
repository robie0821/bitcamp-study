<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.app.dao.StudentDao">

  <!-- 결과 레코드의 컬럼 값을 자바 객체에 어떻게 담을 것인지 설정한다. -->
  <resultMap type="student" id="studentMap">
    <id     column="student_no"       property="no"/>
    <result column="name"          property="name"/>
    <result column="email"        property="email"/>
    <result column="password"     property="password"/>
  </resultMap>

  <insert id="insert" parameterType="student">
    insert into student(name,email,password)
    values(#{name},#{email},sha1(#{password}))
  </insert>
  
  <select id="findAll" resultMap="studentMap">
    select
      student_no,
      name,
      email
    from student
  </select>
  
  <select id="findBy" parameterType="int" resultMap="studentMap">
    select 
      student_no,
      name,
      email
    from student
    where
      student_no=#{no}
  </select>
  
  <select id="findByEmailAndPassword" parameterType="student" resultMap="studentMap">
    select
      student_no,
      name,
      email
    from student
    where 
      email=#{email}
      and password=sha1(#{password})
  </select>
  
  <update id="update" parameterType="student">
	  update student set
	    name=#{name},
	    email=#{email},
	    password=sha1(#{password}),
	  where
	    student_no=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from student
    where 
      student_no=#{no}
  </delete>
</mapper>